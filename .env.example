# OpenAI API Key - Required for GPT-4o language model
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LangChain API Key - Required for LangSmith evaluation and monitoring
# Get from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langchain_api_key_here

# LangSmith Project Name
LANGSMITH_PROJECT=research-assistant-evaluation

# Enable LangSmith Tracing
LANGSMITH_TRACING=true

# Tavily API Key - Optional for additional search capabilities
TAVILY_API_KEY=your_tavily_api_key_here